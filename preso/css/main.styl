body {
  padding-top: 60px;
  padding-bottom: 40px;
  font-size: 22px;
  line-height: 30px;
}

footer {
  position: fixed;
  bottom: 0;
  background-color: white;
  padding: 5px 0 10px 0;
  margin-top: 5px;

  .copy {
    font-size: 16px;
  }
  .toc {
    text-align: right;
  }
}

.slide, .titleSlide {
  height: 1000px;
}

.titleSlide .hero-unit {
  position: relative;
  padding: 60px 60px 60px 270px !important;

  img {
    left: 30px;
    position: absolute;
    top: 55px;
  }
}

.slide .hero-unit {
  position: relative;
  padding: 10px 60px 10px 270px !important;

  img {
    left: 30px;
    position: absolute;
    top: -20px;
  }
}

.titleSlide {
  ul {
    list-style: none;
    margin: 0;
    padding: 0;

    li {
      margin: 0;
      padding: 0;
      font-size: 20px;
      line-height: 24px;
    }
  }
}

.slide {
  .hero-unit {
    padding: 10px 60px;
    h3, p {
      margin: 0;
      padding: 2px 0;
      line-height: 100%;
    }
  }
}

.btn-group {
  display: inline-block;
}

code.block {
  display: block;
  font-size: 20px;
  line-height: 25px;
  padding: 10px;
}

ul.links li {
  line-height: 32px;
}

.dl-horizontal dt {
  width: 200px;
  line-height: 32px;
}
.dl-horizontal dd {
  margin-left: 220px;
  margin-bottom: 30px;
  line-height: 32px;
}
